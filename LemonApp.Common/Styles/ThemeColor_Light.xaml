<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  LightMode  -->
    <!--  窗口背景色  -->
    <SolidColorBrush x:Key="WindowBackgroundColor" Color="#CCFFFFFF" />
    <!--  弹窗背景色 全为Acrylic材质  -->
    <SolidColorBrush x:Key="PopupWndBgColor" Color="#9FFFFFFF" />
    <!--  标签页背景色  -->
    <SolidColorBrush x:Key="TabMaskColor" Color="#6CFFFFFF" />
    <!--  前景色  -->
    <SolidColorBrush x:Key="ForeColor" Color="#1F1F1F" />
    <!--  提示前景色  -->
    <SolidColorBrush x:Key="HintForeColor"
                     Color="#6F6F6F" />
    <!--  蒙罩背景色  -->
    <SolidColorBrush x:Key="MaskColor" Color="#0C000000" />
    <!--  焦点蒙罩背景色  -->
    <SolidColorBrush x:Key="FocusMaskColor" Color="#19000000" />
    <!--  主窗口的内容容器背景色  -->
    <SolidColorBrush x:Key="ContentBgColor" Color="#4CFFFFFF" />
    <SolidColorBrush x:Key="BorderColor" Color="#10000000" />
    <!--  纯色背景  -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="ButtonPureColor" Color="#FFF" />
    <!--  LyricPage  -->
    <SolidColorBrush x:Key="InActiveLrcForeground" Color="#5E000000" />
</ResourceDictionary>