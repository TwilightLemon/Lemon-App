<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--LightMode-->
    <!--高亮主题色-->
    <SolidColorBrush x:Key="HighlightThemeColor"
                     Color="#69F" />
    <!--窗口背景色-->
    <SolidColorBrush x:Key="WindowBackgroundColor"
                     Color="#CCFFFFFF" />
    <!--标签页背景色-->
    <SolidColorBrush x:Key="TabMaskColor"
                     Color="#4CFFFFFF" />
    <!--前景色-->
    <SolidColorBrush x:Key="ForeColor"
                     Color="#0E0E0E" />
    <!--蒙罩背景色-->
    <SolidColorBrush x:Key="MaskColor"
                     Color="#0C000000" />
    <!--焦点蒙罩背景色-->
    <SolidColorBrush x:Key="FocusMaskColor"
                     Color="#19000000" />
    <!--纯色背景-->
    <SolidColorBrush x:Key="BackgroundColor"
                     Color="#FFF" />
</ResourceDictionary>