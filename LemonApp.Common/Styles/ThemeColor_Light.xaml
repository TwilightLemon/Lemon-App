<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--LightMode-->
    <!--窗口背景色-->
    <SolidColorBrush x:Key="WindowBackgroundColor"
                     Color="#CCFFFFFF" />
    <!--弹窗背景色 全为Acrylic材质-->
    <SolidColorBrush x:Key="PopupWndBgColor"
                     Color="#9FFFFFFF" />
    <!--标签页背景色-->
    <SolidColorBrush x:Key="TabMaskColor"
                     Color="#6CFFFFFF" />
    <!--前景色-->
    <SolidColorBrush x:Key="ForeColor"
                     Color="#0E0E0E" />
    <!--蒙罩背景色-->
    <SolidColorBrush x:Key="MaskColor"
                     Color="#0C000000" />
    <!--焦点蒙罩背景色-->
    <SolidColorBrush x:Key="FocusMaskColor"
                     Color="#19000000" />
    <SolidColorBrush x:Key="BorderColor" 
                     Color="#19000000"/>
    <!--纯色背景-->
    <SolidColorBrush x:Key="BackgroundColor"
                     Color="#FFF0F0F0" />
</ResourceDictionary>