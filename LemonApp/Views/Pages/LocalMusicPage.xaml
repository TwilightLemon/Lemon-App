<Page x:Class="LemonApp.Views.Pages.LocalMusicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:base="clr-namespace:LemonApp.Common.UIBases;assembly=LemonApp.Common"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LemonApp.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:uc="clr-namespace:LemonApp.Views.UserControls"
      xmlns:ws="https://schemas.elecho.dev/wpfsuite"
      d:DataContext="{d:DesignInstance Type=local:LocalMusicPage}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Foreground="{DynamicResource ForeColor}"
      mc:Ignorable="d">

    <Grid>
        <base:ScrollViewer Style="{StaticResource SimpleVerticalScrollViewerStyle}">
            <StackPanel>
                <TextBlock Margin="24,12"
                           VerticalAlignment="Top"
                           FontSize="24"
                           FontWeight="Bold"
                           Text="Local Playlists" />
                <ItemsControl Margin="20,0"
                              d:ItemsSource="{d:SampleData ItemCount=6}"
                              ItemsSource="{Binding LocalDirs}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <base:AutoUniformGrid Columns="4"
                                                  HorizontalSpacing="8"
                                                  MaxItemWidth="240"
                                                  MinItemWidth="180"
                                                  VerticalSpacing="12" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ws:Button MaxWidth="320"
                                       Padding="12,8"
                                       Command="{Binding DataContext.GotoPlaylistCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                       CommandParameter="{Binding}"
                                       Content="{Binding Name}"
                                       Style="{StaticResource SimpleButtonStyleForWs}"
                                       ToolTip="{Binding Path}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </base:ScrollViewer>
        <ws:Button Width="36"
                   Height="36"
                   Margin="32"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Command="{Binding OpenAddDirDialogCommand}"
                   Content="&#xe710;"
                   CornerRadius="18"
                   FontFamily="{StaticResource SegoeFluentIcon}"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="{DynamicResource BackgroundColor}"
                   Style="{StaticResource AccentButtonStyleForWs}" />
    </Grid>
</Page>
