<UserControl x:Class="LemonApp.Views.UserControls.DownloadMenuDecorator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LemonApp.Views.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="40"
             d:Width="200"
             Foreground="{DynamicResource ForeColor}"
             mc:Ignorable="d">
    <Grid>
        <Border Width="18"
                Height="18"
                Margin="8"
                HorizontalAlignment="Right"
                Background="{DynamicResource HighlightThemeColor}"
                CornerRadius="9">
            <TextBlock x:Name="TaskCountTb"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="10"
                       Text="12" />
        </Border>
    </Grid>
</UserControl>
