<UserControl x:Class="LemonApp.Views.UserControls.LyricLineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ws="https://schemas.elecho.dev/wpfsuite"
             d:DesignHeight="100"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <ws:StackPanel Margin="8,0" Spacing="8">
        <WrapPanel x:Name="RomajiLrcContainer" Opacity="0.8" />
        <WrapPanel x:Name="MainLrcContainer" />
        <TextBlock x:Name="TranslationLrc"
                   Opacity="0.6"
                   TextWrapping="Wrap" />
    </ws:StackPanel>
</UserControl>
