<base:FluentWindowBase x:Class="LemonApp.Views.Windows.UpdaterWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:base="clr-namespace:LemonApp.Common.UIBases;assembly=LemonApp.Common"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="clr-namespace:LemonApp.Views.Windows"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:ws="https://schemas.elecho.dev/wpfsuite"
                       Title="UpdaterWindow"
                       Width="380"
                       Height="260"
                       d:DataContext="{d:DesignInstance Type=local:UpdaterWindow}"
                       Background="{DynamicResource WindowBackgroundColor}"
                       Foreground="{DynamicResource ForeColor}"
                       Mode="Acrylic"
                       ResizeMode="NoResize"
                       ShowInTaskbar="False"
                       mc:Ignorable="d">
    <Grid>
        <Grid Margin="0,0,0,56"
              Background="{DynamicResource TabMaskColor}"
              WindowChrome.IsHitTestVisibleInChrome="True">
            <TextBlock x:Name="TitleTb" Margin="16,14">
                <Run FontSize="16"
                     FontWeight="Bold"
                     Text="Update Available  " />
                <Hyperlink NavigateUri="{Binding Config.ReleasePage}">
                    View on GitHub
                </Hyperlink>
            </TextBlock>
            <TextBlock Margin="20,42,0,8" TextWrapping="Wrap">
                <Run d:Text="v1.0.0.0-preview" Text="{Binding Config.Title}" />
                <LineBreak />
                <Run d:Text="Description..." Text="{Binding Config.Description}" />
            </TextBlock>
        </Grid>
        <ws:ProgressBar x:Name="DownloadProgressBar"
                        Height="4"
                        Margin="20,0,20,54"
                        VerticalAlignment="Bottom"
                        d:IsIndeterminate="True"
                        Background="{DynamicResource MaskColor}"
                        BorderThickness="0"
                        CornerRadius="2"
                        Foreground="{DynamicResource HighlightThemeColor}"
                        Maximum="100" />
        <Grid Height="56" VerticalAlignment="Bottom">
            <TextBlock Margin="22,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center">
                Package Size:<Run Text="{Binding PackageSize}" />
            </TextBlock>
            <ws:WrapPanel Margin="0,0,20,0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          HorizontalSpacing="24"
                          ItemHeight="32"
                          ItemWidth="72">
                <ws:Button Command="{Binding UpdateCommand}"
                           Content="Update"
                           Style="{StaticResource AccentButtonStyleForWs}" />
                <ws:Button Grid.Column="1"
                           Click="CancelBtn_Click"
                           Content="Cancel"
                           Style="{StaticResource SimpleButtonStyleForWs}" />
            </ws:WrapPanel>
        </Grid>
    </Grid>
</base:FluentWindowBase>
